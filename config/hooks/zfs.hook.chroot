#!/bin/sh

# Download and install zfs + spl
mkdir -p /opt
cd /opt
git clone https://github.com/zfsonlinux/spl.git
git clone https://github.com/zfsonlinux/zfs.git
cd spl
./autogen.sh
./configure --prefix=/usr
make
make install
cd zfs
./autogen.sh
./configure --with-spl=/opt/spl --prefix=/usr
make
make install
cd /opt
rm -rf /opt/spl
rm -rf /opt/zfs
