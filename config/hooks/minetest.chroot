#!/bin/sh
#pushd .
# Download and install minetest from git
mkdir -p /opt
cd /opt
git clone https://github.com/celeron55/minetest.git
cd minetest/games
git clone https://github.com/minetest/common.git
git clone https://github.com/celeron55/minetest_game.git
mkdir -p /opt/minetest/build
cd /opt/minetest/build
cmake .. -DRUN_IN_PLACE=0
make -j4
make install
cd /opt
rm -rf minetest

